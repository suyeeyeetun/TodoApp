@{
    ViewData["Title"] = "To Do Lists";
}
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">

                <div class="card shadow">
                    <div class="card-header bg-primary text-white text-center">
                        <h4>📝 To-Do List</h4>
                    </div>

                    <div class="card-body">
                        <!-- Add Todo -->
                        <form action="/Tasks/Create" method="post">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" name="title" placeholder="Enter a task">
                                <button class="btn btn-primary" id="addBtn">Add</button>
                            </div>
                        </form>

                        <!-- Todo Items -->
                        <ul class="list-group">
                            @foreach (var todo in Model)
                            {
                                <li class="list-group-item">
                                    <div class="d-flex align-items-center justify-content-between">

                                        <!-- Left: checkbox + title -->
                                        <form asp-action="Edit" method="post"
                                              class="d-flex align-items-center gap-2 flex-grow-1">
                                            <input type="hidden" name="id" value="@todo.Id" />

                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   name="isCompleted"
                                                   value="true"
                                                   @(todo.IsCompleted ? "checked" : "") />

                                            <input name="title"
                                                   class="form-control form-control-sm @(todo.IsCompleted ? "text-decoration-line-through text-muted" : "")"
                                                   value="@todo.Title" />

                                            <!-- Actions grouped -->
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-primary">
                                                    Edit
                                                </button>
                                                <button formaction="/Todo/Delete"
                                                        formmethod="post"
                                                        class="btn btn-outline-danger">
                                                    🗑
                                                </button>
                                            </div>
                                        </form>

                                    </div>
                                </li>
                            }
                        </ul>

                    </div>

                    
                </div>

            </div>
        </div>
    </div>

</body>

